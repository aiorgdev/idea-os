{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(node:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(echo:*)",
      "Bash(rm:*)",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "NotebookEdit",
      "WebFetch(domain:*)",
      "WebSearch",
      "Read(~/.aiorg/**)",
      "Write(~/.aiorg/**)",
      "Edit(~/.aiorg/**)",
      "Write(config/**)",
      "Edit(config/**)",
      "Read(config/**)",
      "Write(research/**)",
      "Edit(research/**)",
      "Read(research/**)",
      "Write(mockups/**)",
      "Edit(mockups/**)",
      "Write(pitch/**)",
      "Edit(pitch/**)",
      "Write(economics/**)",
      "Edit(economics/**)",
      "Write(validation/**)",
      "Edit(validation/**)",
      "Write(reports/**)",
      "Edit(reports/**)",
      "Write(prototype/**)",
      "Edit(prototype/**)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(.env.local)",
      "Read(secrets/**)"
    ]
  }
}